<%= content_for :styles do %>
  <style>
    body {
      background-color: #DADADA;
    }
    body > .grid {
      height: 100%;
    }
    .image {
      margin-top: -100px;
    }
    .column {
      max-width: 450px;
    }
  </style>
<% end %>
<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <div class="content">
        Change your password
      </div>
    </h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'ui large form' }) do |f| %>
      <div class="ui stacked segment">
        <%= render "users/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="inline field">
          <%= f.label :password, 'New Password:' %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
        </div>

        <div class="inline field">
          <%= f.label :password_confirmation, "Confirm new password" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <%= f.submit "Change your password", class: 'ui fluid large teal submit button' %>
      </div>

      <div class="ui error message"></div>
    <% end %>
    <div class="ui message">
      New to us? <%= link_to 'Sign Up',  new_registration_path(resource_name), class: 'item' %>
      <br />
      have account? <%= link_to 'Login',  new_session_path(resource_name), class: 'item' %>
      <br />
      <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
      <% end %>
    </div>
  </div>
</div>