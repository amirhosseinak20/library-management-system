<%= content_for :styles do %>
  <style>
    body {
      background-color: #DADADA;
    }
    body > .grid {
      height: 100%;
    }
    .image {
      margin-top: -100px;
    }
    .column {
      max-width: 450px;
    }
  </style>
<% end %>
<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <% image_tag("/images/logo.png", alt: "logo", class: "image") %>
      <div class="content">
        Log-in to your account
      </div>
    </h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'ui large form' }) do |f| %>
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <%= semantic_icon('user') %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
        </div>
        <%= f.submit "Log in", class: 'ui fluid large teal submit button' %>
      </div>

      <div class="ui error message"></div>
    <% end %>
    <div class="ui message">
      New to us? <%= link_to 'Sign Up',  new_user_registration_path, class: 'item' %>
    </div>
  </div>
</div>